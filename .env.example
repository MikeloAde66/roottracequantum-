# RootTrace Quantum - Environment Variables Template
# Copy this to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/roottrace_quantum
REDIS_URL=redis://localhost:6379/0
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password_here

# Quantum Computing (Optional - uses classical simulation if not set)
# Get your token at: https://quantum.ibm.com
IBMQ_TOKEN=your_ibm_quantum_token_here

# AWS Braket (Optional backup quantum provider)
AWS_BRAKET_ROLE_ARN=arn:aws:iam::xxx:role/BraketRole
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret

# API Security
JWT_SECRET_KEY=generate_a_secure_random_key_here_use_openssl_rand_hex_32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Payment Processing
STRIPE_SECRET_KEY=sk_test_xxx_get_from_stripe_dashboard
STRIPE_WEBHOOK_SECRET=whsec_xxx_get_from_stripe_dashboard
STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# Email Service
SENDGRID_API_KEY=SG.xxx_get_from_sendgrid
FROM_EMAIL=noreply@roottrace-quantum.com

# AWS Services
AWS_REGION=us-east-1
S3_BUCKET_NAME=roottrace-quantum-uploads

# Monitoring
SENTRY_DSN=https://xxx@sentry.io/xxx

# Application Settings
ENVIRONMENT=development  # development, staging, production
DEBUG=True
API_VERSION=v1
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_PER_HOUR=100
RATE_LIMIT_PER_DAY=1000

# Quantum Processing
USE_QUANTUM_HARDWARE=False  # Set to True when IBMQ_TOKEN is configured
QUANTUM_BACKEND=ibm_nazca  # or simulator
QAOA_LAYERS=6
NUM_QUBITS=16
